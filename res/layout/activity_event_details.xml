 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#373A3E" >

<ScrollView 
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:scrollbars="none">

  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" >
  
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="200dp" >

        <ImageView
            android:id="@+id/event_details_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="115dp"
            android:background="#45000000" >

            <TextView
                android:id="@+id/event_details_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/event_details_date_time_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/event_details_title"
                android:layout_below="@+id/event_details_title"
                android:layout_marginTop="5dp"/>
        </RelativeLayout>
    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:layout_below="@+id/relativeLayout1"
            android:layout_marginBottom="150dp">

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/shadowbottom" />

            <TextView
                android:id="@+id/event_details_summary_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_marginTop="18dp"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/event_details_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="22dp"
                android:layout_marginTop="10dp"
                android:textColor="#ffffff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/event_details_description_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:layout_marginTop="10dp"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/event_details_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="22dp"
                android:layout_marginTop="10dp"
                android:textColor="#ffffff"
                android:textSize="15sp"/>
            
            <RelativeLayout 
			    android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp">
            
             <View
                android:id="@+id/viewline2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#575757" />
			<TextView
                android:id="@+id/event_details_get_directions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:text="@string/get_dir"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold" 
                android:layout_marginTop="20dp" />
			
            <TextView
                android:id="@+id/event_details_get_directions_ra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:text="@string/ra"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"/>
            
            </RelativeLayout>
            
			<RelativeLayout 
			    android:layout_width="fill_parent"
                android:layout_height="60dp">
                
			    <View
                android:id="@+id/viewline1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#575757" />
			    
			    <TextView
                android:id="@+id/event_details_add_to_calendar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:text="@string/add_to_cal"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp" 
                />
			    
			    <TextView
                android:id="@+id/event_details_add_to_calendar_ra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:text="@string/ra"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold" 
                android:layout_marginTop="20dp"/>
			    
			    
			</RelativeLayout>

            <View
                android:id="@+id/viewline3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#575757" />
        </LinearLayout>
</RelativeLayout>
</ScrollView>
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#990380D7" >

        <Button
            android:id="@+id/i_am_going"
            android:layout_width="198dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_margin="25dp"
            android:background="@drawable/im_going" />
    </RelativeLayout>
</RelativeLayout>